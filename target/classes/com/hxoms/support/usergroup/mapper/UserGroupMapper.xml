    <!--查询管理处室树-->
    <select id="selectUserGroupTree" parameterType="String" resultType="com.hxoms.common.tree.Tree">
    SELECT id as "id",ug_name as "label",pid as "pId" FROM cf_usergroup
    where org_id=#{id}
    ORDER  BY orderno
    </select>
    <select id="selectUserGroupUserTree" resultType="com.hxoms.common.tree.Tree">
        select id as "id",ug_name as "label", '0' as "pId",'usergroup' as "type"
        from cf_usergroup
        where org_id=#{orgId}
        union all
        select u.user_id as "id",concat(u.user_name,u.user_code) as "label", ugu.ug_id as "pId",'user' as "type"
        from  cf_usergroup_user ugu
        right join cf_user u
        on ugu.user_id = u.user_id where u.org_id=#{orgId}
    </select>
